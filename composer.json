{
    "name": "wp-accountancy/wp-accountancy",
    "description": "WordPress plugin for accountancy functions",
    "type": "wordpress-plugin",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Eric Sprangers",
            "email": "eric.sprangers@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
          "WP_Accountancy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "WP_Accountancy\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "yoast/phpunit-polyfills": "*"
    },
    "require": {
        "setasign/fpdf": "^1",
        "ext-gd": "*",
        "ext-xml": "*",
        "ext-dom": "*"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
